/** @var Netresearch_OPS_Block_Form_InterSolve $this */
?>

<ul class="form-list ops-form-list" id="payment_form_<?php echo $this->getMethodCode(); ?>" style="display:none;">
    <?php $brands = $this->getInterSolveBrands(); ?>
    <?php if (sizeof($brands) > 0): ?>
        <?php if (sizeof($brands) == 1): ?>
            <?php $brand = current($brands) ?>
            <?php echo $this->escapeHtml($this->__('Brand')); ?>
            <input type="hidden" name="payment[intersolve_brand]"
                   value="<?php echo $this->escapeHtml($brand['brand']); ?>">
            <?php echo $this->escapeHtml($brand['value']); ?>
        <?php else: ?>
            <label class="required-entry" for="ops_intersolve_brand"><?php echo $this->escapeHtml(
                    $this->__('Please select a brand')
                ); ?></label><br/>
            <select name="payment[intersolve_brand]" id="ops_intersolve_brand">
                <?php foreach ($brands as $brand): ?>
                    <option value="<?php echo $this->escapeHtml($brand['brand']); ?>">
                        <?php echo $this->escapeHtml($brand['value']); ?>
                    </option>
                <?php endforeach; ?>
            </select>
        <?php endif; ?>
    <?php endif; ?>
    <p><?php echo $this->getRedirectMessage();?></p>
</ul>
